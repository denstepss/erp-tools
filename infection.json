{
  "source": {
    "directories": [
      "src"
    ]
  },
  "timeout": 10,
  "logs": {
    "text": "test/report/infection/infection.log",
    "summary": "test/report/infection/summary.log",
    "perMutator": "test/report/infection/per-mutator.md",
    "badge": {
      "branch": "master"
    }
  },
  "mutators": {
    "@default": true,
    "@function_signature": false,
    "TrueValue": {
      "ignore": [
        "NameSpace\\*\\Class::method"
      ]
    }
  },
  "testFramework":"phpunit",
  "bootstrap":"./tests/bootstrap.php",
  "testFrameworkOptions": "-vvv"
}
